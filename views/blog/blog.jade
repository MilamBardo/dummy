extends ../layout

block content
    if alertmessage
        p(style="color: red")=alertmessage
    if loggedin && isadmin
        a(href ="/blog/addpost") Add New Post
    if posts
        each val in posts
            if loggedin && isadmin
                form(name="editpost", action="/blog/editpost", method="get")
                    input(type="hidden", name="postid" value=val.id)
                    input(type="submit", value="editpost")

            article(class="mainblog")
                header
                    h1
                        if (val.posturl)
                            a(href ="/blog/"+val.id+"/"+val.posturl)= val.posttitle
                        else
                            a(href ="/blog/"+val.id+"/"+val.posttitle)= val.posttitle
                    h2
                        time= (moment(val.postdate).format('MMM Do YYYY'))
                div(class="articlebackgroud")
                    if val.imagefilepath
                        img(class="articleimage", src=val.imagefilepath, alt=val.imagealt, title=val.imagealt)
                    if val.postimagecaption != undefined
                        br
                        Label(style="font-size: 0.75em;")!=val.postimagecaption
                    p(class="articlemainparagraph")!=val.postbody
                    a(href ="/blog/viewpost/"+val.id) Read More