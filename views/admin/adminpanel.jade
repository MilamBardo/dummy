extends ../layout

block content
    div(class="bordereddiv")
        label Image Uploads
        br
        form(name="uploadimage", enctype="multipart/form-data", action="/admin/uploadimage", method="post")
            div
                label Image Name:
            div
                input(
                    type="text",
                    name="imagename"
                )
            div
                label Choose Image to Upload
            div
                input(type="file", name="file")
            div
                label Image Title
            div
                input(
                    type="text",
                    name="imagetitle"
                )
            div
                label Image Alt Text:
            div
                textarea(
                    name="alttext", 
                    cols="90", 
                    rows="10"
                )
            div
                label Image Caption:
            div
                textarea(
                    name="imagecaption", 
                    cols="90", 
                    rows="10"
                )
            br
            input(type="submit", value="Add Image")
    br
    div(class="bordereddiv")
        label Galleries
        br
        
        form(name="addnewgallery", action="/admin/addnewgallery", method="get")
            input(type="submit", value="Add new gallery")
        form(name="editgallery", action="/admin/editgallery", method="get")
            select(name="gallerylist")
                if galleries != undefined
                    each val in galleries
                        option(value=val.galleryid)=val.galleryname
            input(type="submit", value="Edit gallery")
        